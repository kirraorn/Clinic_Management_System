<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.TheraHealthOS.Views.PatientView"
             NavigatedTo= "ContentPage_NavigatedTo">
<VerticalStackLayout>
    <Label Text="Full Name"/>
    <Entry Text="{Binding Name}"/>
    <Label Text="Date of Birth"/>
    <DatePicker Date="{Binding BirthDate}"/>
    <Label Text="Address"/>
    <Entry Text="{Binding Address}"/>
    <Label Text="Race"/>
    <Entry Text="{Binding Race}"/>
    <Label Text="Gender"/>
    <Entry Text="{Binding Gender}"/>
    <Label Text="Medical Notes"/>
    <Entry Text="{Binding MedicalNotes}"/>

    <Button Text="Cancel" Clicked="CancelPatientClicked"/>
    <Button Text="Ok" Clicked="OkPatientClicked"/>
</VerticalStackLayout>
</ContentPage>