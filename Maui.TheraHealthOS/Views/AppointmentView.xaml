<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.TheraHealthOS.Views.AppointmentView"
             NavigatedTo= "ContentPage_NavigatedTo">
<VerticalStackLayout>
    <Label Text="Patient" />
    <Picker x:Name="patientPicker" ItemsSource="{Binding Patients}"
        SelectedItem="{Binding SelectedPatient}" />

    <Label Text="Physician" />
    <Picker x:Name="physicianPicker" ItemsSource="{Binding Physicians}"
        SelectedItem="{Binding SelectedPhysician}" />

    <Label Text="Appointment Start"/>
        <DatePicker Date="{Binding StartDate}" MinimumDate="{Binding MinStartDate}"/>
        <TimePicker Time="{Binding StartTime}"/>

    <Label Text="Appointment End"/>
        <TimePicker Time="{Binding EndTime}"/>

    <Label Text="{Binding ErrorMessage}" 
               TextColor="Red" 
               IsVisible="{Binding IsErrorMessageVisible}"
               FontAttributes="Bold"/>
        
    <Label Text="Notes"/>
    <Entry Text="{Binding Notes}"/>

    <Button Text="Cancel" Clicked="CancelAppointmentClicked"/>
    <Button Text="Ok" Clicked="OkAppointmentClicked" IsEnabled="{Binding CanSave}"/>
</VerticalStackLayout>
</ContentPage>