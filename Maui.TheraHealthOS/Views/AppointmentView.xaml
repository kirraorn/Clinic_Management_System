<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.TheraHealthOS.Views.AppointmentView"
             NavigatedTo= "ContentPage_NavigatedTo">
<VerticalStackLayout>
    <Label Text="Patient" />
    <Picker ItemsSource="{Binding Patient}"
            SelectedItem="{Binding SelectedPatient}" />

    <Label Text="Physician" />
    <Picker ItemsSource="{Binding Physician}"
            SelectedItem="{Binding SelectedPhysician}" />

    <Label Text="Appointment Start"/>
        <DatePicker Date="{Binding StartDate}" MinimumDate="{Binding MinStartDate}"/>
    <Label Text="Notes"/>
    <Entry Text="{Binding Notes}"/>

    <Button Text="Cancel" Clicked="CancelAppointmentClicked"/>
    <Button Text="Ok" Clicked="OkAppointmentClicked"/>
</VerticalStackLayout>
</ContentPage>